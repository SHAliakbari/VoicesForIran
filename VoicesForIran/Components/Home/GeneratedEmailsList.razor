@using VoicesForIran.Core.Models

<div class="vstack gap-4 mt-4">
    @foreach (var email in Emails)
    {
        <div class="card rounded-4 border-0 shadow-sm" id="rep-@(email.Representative.Name.Replace(" ", "-"))">
            <div class="card-header bg-white border-0 pt-3 pb-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h3 class="h6 mb-0">@email.Representative.ElectedOffice</h3>
                        <p class="small text-muted mb-0">@email.Representative.Name</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="@email.MailtoLink" target="_blank" class="btn btn-primary rounded-pill px-3"
                           @onclick="() => OnEmailLogged.InvokeAsync(email)">
                            <i class="bi bi-send me-2"></i>Open in Email Client
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row gx-3 gy-3">
                    <div class="col-12 col-md-6">
                        <label for="template-select-@email.CopyKey" class="form-label small text-muted">Template</label>
                        <select id="template-select-@email.CopyKey" class="form-select form-select-sm"
                                @bind="email.SelectedTemplateId"
                                @bind:after="() => OnTemplateChanged.InvokeAsync(email)">
                            <option value="">Default (Recommended)</option>
                            @foreach (var template in email.ApplicableTemplates)
                            {
                                <option value="@template.Id">@GetFriendlyTemplateName(template.FileName)</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <label class="form-label small text-muted d-block">&nbsp;</label>
                        <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="() => OnCopy.InvokeAsync(email)">
                            <i class="bi bi-clipboard me-2"></i>
                            @(CopiedEmailId == email.CopyKey ? "Copied!" : "Copy Content")
                        </button>
                    </div>
                </div>
                <div class="accordion accordion-flush" id="accordion-email-@email.CopyKey">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-email-@email.CopyKey" aria-expanded="false" aria-controls="collapse-email-@email.CopyKey">
                                <strong class="me-2">Subject:</strong> @email.ProcessedTemplate.Subject
                            </button>
                        </h2>
                        <div id="collapse-email-@email.CopyKey" class="accordion-collapse collapse" data-bs-parent="#accordion-email-@email.CopyKey">
                            <div class="accordion-body bg-light" style="white-space: pre-wrap;">
                                @email.ProcessedTemplate.Body
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public List<GeneratedEmailVm> Emails { get; set; } = new();

    [Parameter]
    public int? CopiedEmailId { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<GeneratedEmailVm> OnCopy { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<GeneratedEmailVm> OnTemplateChanged { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<GeneratedEmailVm> OnEmailLogged { get; set; }

    private static string GetFriendlyTemplateName(string fileName)
    {
        var name = Path.GetFileNameWithoutExtension(fileName);
        name = string.Join(" ", name.Split(new[] { '-', '_' }, StringSplitOptions.RemoveEmptyEntries)
            .Select(word => word.Length > 0 ? char.ToUpper(word[0]) + word[1..] : string.Empty));
        return name;
    }

    public class GeneratedEmailVm
    {
        public required Representative Representative { get; set; }
        public required EmailTemplate ProcessedTemplate { get; set; }
        public required string MailtoLink { get; set; }
        public required int CopyKey { get; set; }
        public string? SelectedTemplateId { get; set; }
        public List<EmailTemplate> ApplicableTemplates { get; set; } = new();
    }
}
